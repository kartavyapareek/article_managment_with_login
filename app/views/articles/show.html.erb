<div class='col-md-12'>
  <div class='row'>
    <div class='col-md-12'>
      <h1 class='text-center'>Article</h1>
    </div>
  </div>
  </br>
  <div class='row'>
    <table class="table table-bordered">
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th>Status</th>
        <th>Categories</th>
      </tr>
      <tr>
        <td><%= @article.title %></td>
        <td><%= sanitize(@article.text) %></td>
        <td><%= @article.status %></td>
        <td><%= @article.categories.pluck(:title).join(",") %></td>
      </tr>
    </table>
    
  </div>
</div>